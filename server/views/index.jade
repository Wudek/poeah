extends layout

block content
	nav.top-bar(data-topbar)
		ul.title-area
			li.name: h1: a(href="#") My Site
			li.toggle-topbar.menu-icon: a(href="#"): span Menu
		section.top-bar-section: ul.right
			li: a(href='#')
				i.fi-home
				span Home
			li: a(href='#/items')
				i.fi-list
				span Items
			li: a(href='#/login')
				i.fi-torsos
				span Login

	div(ng-view, ng-controller="AppCtrl")